<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SeoDash Free Bootstrap Admin Template by Adminmart</title>
  <link rel="shortcut icon" type="image/png" href="../assets/images/logos/seodashlogo.png" />
  <link rel="stylesheet" href="../assets/css/styles.min.css" />
</head>

<body>
  <%- include("header") %>
  <%- include("aside") %>

  <!-- ============================================================== -->
  <!-- Start Page Content -->
  <div class="body-wrapper" style="margin-left: 250px;">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-8">
          <div class="card">
            <div class="card-body">
              <h4 class="page-title">Form Basic</h4>
              <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Library</li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- ============================================================== -->
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <form action="/products/insert" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <label for="name">Product Name:</label>
                <input type="text" id="name" name="name" class="form-control" required placeholder="Enter product name">
              </div>

              <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" class="form-control" required placeholder="Enter product description"></textarea>
              </div>

              <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" id="price" name="price" class="form-control" required placeholder="Enter price" min="0" step="0.01">
              </div>

              <div class="form-group">
                <label for="images">Images (You can upload multiple):</label>
                <input type="file" id="images" name="images" class="form-control-file" multiple accept="image/*">
              </div>

              <div class="form-group">
                <label for="mainCategory">Main Category:</label>
                <input type="text" id="mainCategory" name="mainCategory" class="form-control" required placeholder="Enter main category">
              </div>

              <div class="form-group">
                <label for="categories">Categories (Separate by commas):</label>
                <input type="text" id="categories" name="categories" class="form-control" required placeholder="e.g., Men, Shirts">
              </div>

              <div class="form-group">
                <label for="stock">Stock:</label>
                <input type="number" id="stock" name="stock" class="form-control" required placeholder="Enter available stock" min="0">
              </div>

              <div class="form-group">
                <label for="reviews">Reviews:</label>
                <input type="number" id="reviews" name="reviews" class="form-control" value="0" required placeholder="Number of reviews" min="0">
              </div>

              <div class="form-group">
                <label for="estimatedDelivery">Estimated Delivery:</label>
                <input type="text" id="estimatedDelivery" name="estimatedDelivery" class="form-control" value="3-5 business days" required placeholder="Enter estimated delivery">
              </div>

              <div class="form-group form-check">
                <label for="freeShipping">Free Shipping:</label>
                <input type="checkbox" id="freeShipping" name="freeShipping" class="form-check-input">
              </div>

              <div class="form-group">
                <label for="sizes">Sizes (Enter sizes and counts):</label>
                <div id="sizes-container" class="form-group">
                  <div>
                    <input type="text" name="sizes[]" class="form-control" placeholder="Size (e.g., S)">
                    <input type="number" name="sizeCounts[]" class="form-control" placeholder="Count (e.g., 10)" min="0">
                  </div>
                </div>
                <button type="button" class="btn btn-primary" onclick="addSizeField()">Add More Sizes</button>
              </div>

              <div>
                <button type="submit" class="btn btn-success">Add Product</button>
              </div>
            </form>

            <script>
              function addSizeField() {
                const container = document.getElementById('sizes-container');
                const newDiv = document.createElement('div');
                newDiv.innerHTML = `
                  <input type="text" name="sizes[]" class="form-control" placeholder="Size (e.g., S)">
                  <input type="number" name="sizeCounts[]" class="form-control" placeholder="Count (e.g., 10)" min="0">
                `;
                container.appendChild(newDiv);
              }
            </script>
          </div>
        </div>
      </div>
    </div>

    <footer class="footer text-center">
      All Rights Reserved by Matrix-admin. Designed and Developed by <a href="https://wrappixel.com">WrapPixel</a>.
    </footer>
  </div>

  <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../assets/libs/apexcharts/dist/apexcharts.min.js"></script>
  <script src="../assets/libs/simplebar/dist/simplebar.js"></script>
  <script src="../assets/js/sidebarmenu.js"></script>
  <script src="../assets/js/app.min.js"></script>
  <script src="../assets/js/dashboard.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>
